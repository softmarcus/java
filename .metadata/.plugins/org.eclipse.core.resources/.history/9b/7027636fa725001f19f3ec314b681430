package ClienteRepository;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

import com.softgraf.farmacia.model.Cliente;
import com.softgraf.farmacia.model.Produto;

public class ClienteRepository {
	
	private static ClienteRepository repository = null;
	private List<Cliente>lista;
	
	private ClienteRepository() {
		lista = new ArrayList<>();
	}
	//padrao singleton
	public static ClienteRepository getInstancia() {
		if (repository == null) {
			repository = new ClienteRepository();
		}
		return  repository;
	}
	
	public boolean addCliente(Cliente c) {
		return lista.add(c);
	}
	
	public List<Cliente> listaClientes() {
		return Collections.unmodifiableList(lista);
	}
	public Cliente buscarPorNome(String nome) {
		for (Cliente c : lista) {
			if (c.getNome().toLowerCase().contains(nome.toLowerCase())) {
				return c;
			}

		}
		return null;
	}
}
